@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model AunctionApp.BLL.Models.ChangePasswordVM;


<section class="mt-3">
    @if (@TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show w-75 mx-auto d-block" role="alert">
            <strong>Success!</strong> @TempData["SuccessMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    @if (@TempData["ErrMsg"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show w-75 mx-auto d-block" role="alert">
            <strong>Error!</strong> @TempData["ErrMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <main id="main">
        <div class="container mt-4">
            <section class="section register min-vh-70 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Change Password</h5>
                                    </div>

                                    <form class="row g-3" asp-controller="User" asp-action="ChangeUserPassword" style="outline:none">

                                        <div class="alert-danger" asp-validation-summary="@ValidationSummary.ModelOnly"></div>

                                        <div class="col-12 m-2">                                        
                                            <input type="hidden" asp-for="@Model.UserId" placeholder="Email" class="form-control" style="outline:none" required>
                                        </div>


                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.OldPassword" class="form-label"></label>
                                            <input type="text" asp-for="@Model.OldPassword" placeholder="Email" class="form-control" style="outline:none" required>
                                            <span asp-validation-for="@Model.OldPassword" style="color:red"></span>
                                        </div> 


                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.NewPassword" class="form-label"></label>
                                            <input type="text" asp-for="@Model.NewPassword" placeholder="Email" class="form-control" style="outline:none" required>
                                            <span asp-validation-for="@Model.NewPassword" style="color:red"></span>
                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.ConfirmNewPassword" class="form-label"></label>
                                            <input type="text" asp-for="@Model.ConfirmNewPassword" placeholder="Email" class="form-control" style="outline:none" required>
                                            <span asp-validation-for="@Model.ConfirmNewPassword" style="color:red"></span>
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Change Password</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

</section>
@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }

}
