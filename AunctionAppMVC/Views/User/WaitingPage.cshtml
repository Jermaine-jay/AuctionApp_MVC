@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}


<section class="container text-center " style="display: flex; justify-content: center; margin: 150px auto;">
	<div>
		<img src="~/img/car-logo20.jpg" class="my-3" style="width: 50px; height: 50px; position:center; ">
		<div class="card shadow p-3 mb-5 bg-body-tertiary rounded" style="width: 500px;">
			@if (@TempData["SuccessMsg"] != null)
			{

				<div class="card-body">

					<h2>Success!!</h2>
					<p>@TempData["SuccessMsg"]</p>
					<p>Check your Email and click the link to confirm your email</p>
					<p></p>
					
				</div>
			}

			@if (@TempData["ErrMsg"] != null)
			{
				<div class="card-body">

					<h2>Failed!!</h2>
					<p>@TempData["ErrMsg"]</p>
					<p>Failed to send verification mail</p>
					<p></p>

				</div>		
			}

		</div>
		<a asp-controller="User" asp-action="SignIn" tabindex="-1" role="button" aria-disabled="true" style="color:green">Back to Login</a>
	</div>
</section>
@section Scripts
	{
	@{
		Html.RenderPartial("_ValidationScriptsPartial");
	}

}