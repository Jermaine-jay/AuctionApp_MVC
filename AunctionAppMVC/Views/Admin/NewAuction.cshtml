@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model AunctionApp.BLL.Models.AuctionVM;

<section class="mt-1">
@if (@TempData["SuccessMsg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show w-75 mx-auto d-block" role="alert">
        <strong>Success!</strong> @TempData["SuccessMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


@if (@TempData["ErrMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show w-75 mx-auto d-block" role="alert">
        <strong>Error!</strong> @TempData["ErrMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

    <main id="main">
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Create New Auction</h5>
                                        <p class="text-center small">Make sure Every detail is correct</p>
                                    </div>

                                    <form class="row g-3" asp-controller="Admin" asp-action="Save" enctype="multipart/form-data">

                                         <div class="alert-danger" asp-validation-summary="@ValidationSummary.ModelOnly"></div>

                                        <div class="col-12">
                                            <label asp-for="@Model.ProductName" class="form-label">Product Name</label>
                                            <input type="text" asp-for="@Model.ProductName" class="form-control" id="" required>
                                            <span asp-validation-for="@Model.ProductName"></span>
                                        </div>

                                        <div class="col-12">
                                            <label asp-for="@Model.ActualAmount" class="form-label">Product Initial Price</label>
                                            <input type="text" asp-for="@Model.ActualAmount" class="form-control" required>
                                            <span asp-validation-for="@Model.ActualAmount"></span>
                                        </div>

                                        <div class="col-12">
                                            <label asp-for="@Model.Description" class="form-label">Description</label>
                                            <textarea asp-for="@Model.Description" type="textarea" class="form-control"></textarea>
                                            <span asp-validation-for="@Model.Description"></span>
                                        </div>

                                        <div class="col-12">
                                            <div class="custom-file form-control">
                                                <label asp-for="@Model.ProductImagePath"></label>
                                                <input asp-for="@Model.ProductImagePath" type="file" class="form-control-file" accept=".png, .jpg, .jpeg">
                                                <span asp-validation-for="@Model.ProductImagePath"></span>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-success w-100" type="submit">Create Auction</button>
                                        </div>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</section>
@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
}
